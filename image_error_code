/*myql query if else condition*/ using by code geeft/ model(coustomer.php line256)
function mod_brand_wise_product_list($table_column_name=null,$brand_id = null) {

        $this->db->select("
            id,name as product_name, brand as brand_id, code, (CASE WHEN status ='1' THEN 'active' ELSE 'inactive' END) as status,
                ");
        if (!empty($brand_id)) {                      
            $this->db->where("($table_column_name =$brand_id)", NULL, FALSE);  
        }        
         $this->db->where("($table_column_name !='0')", NULL, FALSE);      
        $this->db->order_by('id', 'DESC');
        $department_info = $this->db->get('gift_items');
        //echo $this->db->last_query();
        return $department_info->result();
    }
    /*end myql query if else condition*/
