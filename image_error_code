________________________________________________________
start and end date  validation 
            $this->form_validation->set_rules('time_from', 'starting date', 'callback__datechecker_startdate['.$this->input->post('category_id').']');
            $this->form_validation->set_rules('time_to', 'ending date', 'callback__datechecker_enddate');


function _datechecker_startdate($date) {
        $start_date = $this->input->post('time_from');
        $end_date = $this->input->post('time_to');
        if (empty($start_date)) {
            $this->form_validation->set_message('_datechecker_startdate', 'The start date field is required.');
            return FALSE;
        }
        else if ($start_date > $end_date) {
            $this->form_validation->set_message('_datechecker_startdate', 'Start date should be greater than end date.');
            return FALSE;
        }else{
            return true;
        }
    }

    function _datechecker_enddate($date) {
        $start_date = $this->input->post('time_from');
        $end_date = $this->input->post('time_to');
        if (empty($end_date)) {
            $this->form_validation->set_message('_datechecker_enddate', 'The end date field is required.');
            return FALSE;
        } else if ($start_date > $end_date) {
            $this->form_validation->set_message('_datechecker_enddate', 'End date should not be less than start date.');
            return FALSE;
        }else{
            return true;
        }
        
    }
