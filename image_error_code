}
// end controller
//start model
function counter($id) {                
         $this->db->select("*");         
         $this->db->where("book_id",$id);
        $query=$this->db->get('counter');
        $q=$query->num_rows();        
        if($q!=0)
        {
         $this->db->query("UPDATE `counter` SET `book_id`=$id, `counting_number`=counting_number+1  WHERE book_id='$id'");
         return $this->db->affected_rows(); 
        }else{
            $da=array(
                'book_id'=>$id,
                'counting_number'=>'1'
            );
            return $this->db->insert('counter', $da, 'limit 1');
        }
    }
//end model
table column name
id,	book_id, counting_number
