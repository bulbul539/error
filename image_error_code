Upload Images size
<input type="file" name="preview_image_2" id="preview_image_2" title="select Preview image not more than 50mb" onchange="return ValidatePreview2FileUpload(this.value, this.files[0].size)">
<script type="text/javascript">
 function fileSizeCheck(value, size){
        var re = /(\.jpg|\.jpeg|\.gif|\.png)$/i;
        //var re = /(\.jpg|\.jpeg|\.gif|\.png|\.pdf|\.txt|\.xls|\.xlsx|\.doc|\.docx|\.zip)$/i;
            if(!re.exec(value)){
            alert('Sorry, "' + value + '" is invalid, allowed extensions are : jpg, jpeg, png, gif.');
        }

        if(re.exec(value)){
            var fileSize = size / 1048576;
            if(size >= 3145728){
                alert('Sorry, "' + value + " (" + fileSize.toFixed(2) + " MB)" + '" is exceed the file upload size limit. Please make sure your file is not more than 3 MB.' );
            }
        }

    };       
</script> 
