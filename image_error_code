$writer_names = trim($this->input->post('writers'));
$publisher_names = trim($this->input->post('publishers'));
$status = trim($this->input->post('status'));

if (isset($_POST['search'])) {
//for distroy session value
	$this->session->unset_userdata('book_names');
	$this->session->unset_userdata('wr_name');
	$this->session->unset_userdata('p_name');
	$this->session->unset_userdata('s_tatus');
	//for set session value
	if ($book_name != '' || $writer_names != '' || $publisher_names != '' || $status != '') {
		$this->session->set_userdata('book_names', $book_name);
		$this->session->set_userdata('wr_name', $writer_names);
		$this->session->set_userdata('p_name', $publisher_names);
		$this->session->set_userdata('s_tatus', $status);
	}
}
//for use session value
$b_name = $data['b_name'] = $this->session->userdata('book_names');
