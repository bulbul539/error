//for multiple column text show  one column(concat())
SELECT B.id as id, CONCAT(B.title, ' - ', W.name) as title FROM books as B inner join writers as W on B.writer_id=W.id  where B.active='1' and B.is_free=0 order by B.title ASC
SELECT B.id as id, CONCAT("'",B.title, ' - ', W.name,"'") as title FROM books as B inner join writers as W on B.writer_id=W.id  where B.active='1' and B.is_free=0 order by B.title ASC
