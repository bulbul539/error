___________________________________________________________
special characters validation
function alpha_dash_space($str)
{    
    $r=preg_match('/[\'\/~`\!@#\$%\^&\*\(\)_\-\+=\{\}\[\]\|;:"\<\>,\.\?\\\]/', $str);    
    if($r==true)            
    {
      $this->form_validation->set_message('alpha_dash_space', 'The book name field must contain only character.');
      return false;    
    }else{
        return true;
    }           
}

