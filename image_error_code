/*Four item submenu */
controller
$data['menu']=$this->Product->top_and_sub_menu();

model
function top_and_sub_menu($parent_id=0) {      
        return $this->db->query('select id,name,code from product_categories where product_id='.$parent_id.' order by id desc')->result();
}   

vidw page
<select name="category" class="form-control">
<?php

foreach ($catogory as $m1) {
/*____________first menu_____________*/
echo "<option value='$m1->id'>" . $m1->name . "</option>";
/*____________second menu_____________*/
$sub_m2 = $this->Product->get_category_dropdown($m1->id);
foreach ($sub_m2 as $m2) {
	echo "<option value='$m2->id'>" . nbs(6) . '-' . $m2->name . "</option>";

	/*____________three menu_____________*/
	$sub_m3 = $this->Product->get_category_dropdown($m2->id);
	foreach ($sub_m3 as $m3) {
		echo "<option value='$m3->id'>" . nbs(12) . '-' . $m3->name . "</option>";
	   
		/*____________four menu_____________*/
		$sub_m4 = $this->Product->get_category_dropdown($m3->id);
		foreach ($sub_m4 as $m4) {
			echo "<option value='$m4->id'>" . nbs(12) . '-' . $m4->name . "</option>";
		}
	}
}
}
?>

</select>     
 
