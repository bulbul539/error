onclick hide and show
<script type="text/javascript">

                            $(document).ready(function () {

                                $('input[type="radio"]').click(function () {
                                    //alert($(this).attr("value"));        
                                    if ($(this).attr("value") == "1") {
                                        $(".category").show();
                                        $(".brand").hide();
                                    }

                                    if ($(this).attr("value") == "2") {
                                        $(".category").hide();
                                        $(".brand").show();

                                    }


                                });

                            });

                        </script>    
