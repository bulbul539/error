//image uploading validation code
$this->form_validation->set_rules('userfile1', '', 'callback_valid_image1');

public function valid_image1($id = '') {
        if ($id == '') {       
            if ($_FILES['userfile1']['name'] == '') {
            $this->form_validation->set_message('valid_image1', 'The Images Option 1 field is required.');
            return false;
            }
        }else {
            if ($this->input->post('userfile1') != '') {
            return true;
            }
           }
        }
